<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/input0"
        android:layout_weight="0.35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/result"
        android:layout_weight="0.15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancle"
            android:layout_weight="0.25"
            android:text="C"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
        <Button
            android:id="@+id/bracket"
            android:text="()"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
        <Button
            android:id="@+id/percent"
            android:text="%"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
        <Button
            android:id="@+id/division"
            android:text="/"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:onClick="input">
        <Button
            android:id="@+id/seven"
            android:text="7"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
        <Button
            android:id="@+id/eight"
            android:text="8"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
        <Button
            android:id="@+id/nine"
            android:text="9"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
        <Button
            android:id="@+id/multiple"
            android:text="*"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/four"
            android:text="4"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
        <Button
            android:layout_weight="0.25"
            android:id="@+id/five"
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
        <Button
            android:layout_weight="0.25"
            android:id="@+id/six"
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
        <Button
            android:layout_weight="0.25"
            android:id="@+id/minus"
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button
            android:layout_weight="0.25"
            android:id="@+id/one"
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
        <Button
            android:layout_weight="0.25"
            android:id="@+id/two"
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
        <Button
            android:layout_weight="0.25"
            android:id="@+id/three"
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
        <Button
            android:layout_weight="0.25"
            android:id="@+id/plus"
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button
            android:layout_weight="0.25"
            android:id="@+id/dot"
            android:text="."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
        <Button
            android:layout_weight="0.25"
            android:id="@+id/zero"
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
        <Button
            android:layout_weight="0.5"
            android:id="@+id/equals"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="input"/>
    </LinearLayout>

</LinearLayout>


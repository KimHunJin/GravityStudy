<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sku.hoony.calculatorapplication.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="50dp"
        android:id="@+id/tv"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="AC"
        android:textSize="40dp"
        android:id="@+id/btnReset"
        android:layout_below="@+id/tv"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="+/-"
        android:textSize="40dp"
        android:id="@+id/btnMark"
        android:layout_below="@+id/tv"
        android:layout_toRightOf="@+id/btnReset"/>

    <Button
    android:layout_width="90dp"
    android:layout_height="70dp"
    android:text="%"
    android:textSize="40dp"
    android:id="@+id/btnPercent"
    android:layout_below="@+id/tv"
    android:layout_toRightOf="@+id/btnMark"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="+"
        android:textSize="40dp"
        android:id="@+id/btnPlus"
        android:layout_below="@+id/tv"
        android:layout_toRightOf="@+id/btnPercent"/>

    <Button
    android:layout_width="90dp"
    android:layout_height="70dp"
    android:text="7"
    android:textSize="40dp"
    android:id="@+id/btn7"
    android:layout_below="@+id/btnReset"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="8"
        android:textSize="40dp"
        android:id="@+id/btn8"
        android:layout_below="@+id/btnReset"
        android:layout_toRightOf="@+id/btn7"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="9"
        android:textSize="40dp"
        android:id="@+id/btn9"
        android:layout_below="@+id/btnReset"
        android:layout_toRightOf="@+id/btn8"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="-"
        android:textSize="40dp"
        android:id="@+id/btnMinus"
        android:layout_below="@+id/btnPlus"
        android:layout_toRightOf="@+id/btn9"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="4"
        android:textSize="40dp"
        android:id="@+id/btn4"
        android:layout_below="@+id/btn7"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="5"
        android:textSize="40dp"
        android:id="@+id/btn5"
        android:layout_below="@+id/btn7"
        android:layout_toRightOf="@+id/btn4"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="6"
        android:textSize="40dp"
        android:id="@+id/btn6"
        android:layout_below="@+id/btn7"
        android:layout_toRightOf="@+id/btn5"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="*"
        android:textSize="40dp"
        android:id="@+id/btnMultiplication"
        android:layout_below="@+id/btnMinus"
        android:layout_toRightOf="@+id/btn6"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="1"
        android:textSize="40dp"
        android:id="@+id/btn1"
        android:layout_below="@+id/btn4"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="2"
        android:textSize="40dp"
        android:id="@+id/btn2"
        android:layout_below="@+id/btn4"
        android:layout_toRightOf="@+id/btn1"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="3"
        android:textSize="40dp"
        android:id="@+id/btn3"
        android:layout_below="@+id/btn4"
        android:layout_toRightOf="@+id/btn2"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="/"
        android:textSize="40dp"
        android:id="@+id/btnDivision"
        android:layout_below="@+id/btnMultiplication"
        android:layout_toRightOf="@+id/btn3"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="0"
        android:textSize="40dp"
        android:id="@+id/btn0"
        android:layout_below="@+id/btn1" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="."
        android:textSize="40dp"
        android:id="@+id/btnPoint"
        android:layout_below="@+id/btn1"
        android:layout_toRightOf="@+id/btn0"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="="
        android:textSize="40dp"
        android:id="@+id/btnCalculation"
        android:layout_below="@+id/btnDivision"
        android:layout_toRightOf="@+id/btnPoint"/>

</RelativeLayout>
